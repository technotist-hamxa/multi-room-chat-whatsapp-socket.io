generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
    binaryTargets = ["linux-musl"]  // first one is for cross-platform, second one for docker, last one for serverless environment. safe to include all

  // output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  userName String
  email String
  clerkId String @unique
  sentMessages Message[] @relation("sender")
  recievedMessages Message[] @relation("reciever")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id String @id @default(cuid())
  message String
  senderId String
  recieverId String
  sender User @relation("sender",fields:[senderId], references: [id])
  reciever User @relation("reciever",fields:[recieverId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}